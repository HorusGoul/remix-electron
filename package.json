{
  "name": "remix-electron",
  "version": "1.3.0",
  "author": "itsMapleLeaf",
  "description": "Electron integration for Remix",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "types": "./src/main.d.ts",
  "main": "./src/main.cjs",
  "files": [
    "src/**/*.cjs",
    "src/main.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./src/main.d.ts",
      "require": "./src/main.cjs"
    }
  },
  "scripts": {
    "lint": "run-s --continue-on-error lint:*",
    "lint:eslint": "eslint . --fix --cache --cache-file=node_modules/.cache/.eslintcache --report-unused-disable-directives",
    "lint:format": "prettier . --write --cache",
    "lint:types": "tsc -b",
    "test": "vitest --no-watch",
    "test-ui": "vitest --ui",
    "release": "pnpm test && release-it"
  },
  "dependencies": {
    "@types/mime": "^3.0.2",
    "@types/node": "^20.8.6",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "fast-glob": "^3.3.1",
    "mime": "^3.0.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "@remix-run/node": ">=1.4.0",
    "@remix-run/server-runtime": ">=1.4.0",
    "@remix-run/web-stream": ">=1.0.3",
    "electron": ">=16",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "github:itsMapleLeaf/configs",
    "@playwright/test": "^1.39.0",
    "@remix-run/dev": "^2.0.1",
    "@remix-run/node": "^2.0.1",
    "@remix-run/server-runtime": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/ui": "^0.34.6",
    "electron": "^27.0.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "execa": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.39.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^16.2.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "release-it": {
    "git": {
      "commitMessage": "v${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "web": true
    }
  }
}
