{
  "name": "remix-electron",
  "version": "1.2.2",
  "author": "itsMapleLeaf",
  "description": "Electron integration for Remix",
  "license": "MIT",
  "repository": "https://github.com/itsMapleLeaf/remix-electron",
  "types": "./dist/main.d.ts",
  "main": "./dist/main.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup-node src/main.ts --target node16 --format cjs --dts --sourcemap",
    "build-watch": "pnpm build -- --watch",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "test": "pnpm build && vitest --no-watch",
    "test-dev": "run-p --print-label --race vitest-ui build-watch",
    "vitest-ui": "vitest --ui",
    "release": "pnpm test && release-it"
  },
  "dependencies": {
    "@types/mime": "^3.0.1",
    "@types/node": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "fast-glob": "^3.2.12",
    "mime": "^3.0.0",
    "zod": "^3.21.4"
  },
  "peerDependencies": {
    "@remix-run/node": ">=1.4.0",
    "@remix-run/server-runtime": ">=1.4.0",
    "@remix-run/web-stream": ">=1.0.3",
    "electron": ">=16",
    "react": ">=17",
    "react-dom": ">=17"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^3.0.1",
    "@playwright/test": "^1.34.3",
    "@remix-run/dev": "^1.16.1",
    "@remix-run/node": "^1.16.1",
    "@remix-run/server-runtime": "^1.16.1",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/ui": "^0.31.2",
    "electron": "^25.0.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "execa": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.34.3",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^15.10.3",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.3.9",
    "vitest": "^0.31.2"
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.cache/**",
      "**/.vscode/**",
      "**/integration/fixtures/**"
    ],
    "rules": {
      "prettier/prettier": "error",
      "import/no-unused-modules": "off",
      "unicorn/prefer-module": "off",
      "unicorn/prevent-abbreviations": "off",
      "unicorn/no-process-exit": "off",
      "prefer-const": "error"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "release-it": {
    "git": {
      "commitMessage": "v${version}",
      "commit": true,
      "tag": true,
      "push": true
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "web": true
    }
  }
}
