{
  "name": "remix-electron-template",
  "description": "",
  "version": "0.0.0",
  "private": true,
  "main": "desktop/main.js",
  "scripts": {
    "clean": "del-cli dist desktop/build public/build",
    "dev": "npm run clean && cross-env NODE_ENV=development npm-run-all --parallel --print-label --race dev:*",
    "dev:remix": "remix watch",
    "dev:nodemon": "wait-on file:desktop/main.js && nodemon .",
    "build": "npm run clean && remix build && electron-builder",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "build": {
    "files": [
      "desktop",
      "public",
      "remix.config.js"
    ]
  },
  "dependencies": {
    "@remix-run/node": "^2.0.1",
    "@remix-run/react": "^2.0.1",
    "@remix-run/server-runtime": "^2.0.1",
    "@remix-run/web-stream": "^1.1.0",
    "fast-glob": "^3.3.1",
    "isbot": "^3.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-electron": "^1.3.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.0.1",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "cross-env": "^7.0.3",
    "del-cli": "^5.1.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "sideEffects": false
}
